{
  "name": "whytmod-app",
  "version": "0.1.0",
  "description": "WhytMod AI - Application desktop mod manager IA-first avec Electron + React + TypeScript",
  "main": "dist/main/main.js",
  "homepage": "https://whytmod.ai",
  "author": {
    "name": "WhytMod Team",
    "email": "support@whytmod.ai",
    "url": "https://github.com/AdminWhytcard"
  },
  "license": "MIT",
  "private": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/AdminWhytcard/whytmod-app.git"
  },
  "bugs": {
    "url": "https://github.com/AdminWhytcard/whytmod-app/issues"
  },
  "keywords": [
    "electron",
    "react",
    "typescript",
    "mod-manager",
    "gaming",
    "ai",
    "nexus-mods",
    "steam-workshop"
  ],
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev": "concurrently \"npm run dev:renderer\" \"npm run dev:main\"",
    "dev:renderer": "vite",
    "dev:main": "electron .",
    "build": "npm run build:renderer && npm run build:main",
    "build:renderer": "vite build",
    "build:main": "tsc -p tsconfig.main.json",
    "build:electron": "electron-builder",
    "package": "npm run build && electron-builder --publish=never",
    "release": "npm run build && electron-builder --publish=always",
    "test": "vitest",
    "test:e2e": "playwright test",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .ts,.tsx && prettier --check src",
    "lint:fix": "eslint src --ext .ts,.tsx --fix && prettier --write src",
    "type-check": "tsc --noEmit",
    "security:audit": "npm audit && npx inspectron --input ./dist",
    "security:pentest": "npm run security:audit && npx electron-security-checker",
    "sign:windows": "electron-builder --win --publish=never",
    "runner:setup": "echo 'Runner setup - see .github/workflows/setup-runner.yml'",
    "runner:test": "echo 'Runner test - see GitHub Actions'",
    "metrics:upload": "echo 'Metrics upload placeholder'"
  },
  "devDependencies": {
    "@types/node": "^20.14.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.15.0",
    "@typescript-eslint/parser": "^7.15.0",
    "@vitest/coverage-v8": "^1.6.0",
    "concurrently": "^8.2.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.13.0",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.34.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "playwright": "^1.45.0",
    "prettier": "^3.3.0",
    "typescript": "^5.5.0",
    "vite": "^5.3.0",
    "vitest": "^1.6.0"
  },
  "dependencies": {
    "react": "^18.3.0",
    "react-dom": "^18.3.0"
  },
  "build": {
    "appId": "ai.whytmod.app",
    "productName": "WhytMod AI",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "dist/",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "build/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
